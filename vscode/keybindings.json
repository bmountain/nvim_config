[
    // emacs key bindings in insert mode

    {
        // disable quick open
        "key": "ctrl+p",
        "command": "-workbench.action.quickOpen"
    },
    {
        // quick open in normal mode
        "key": "ctrl+p",
        "command": "workbench.action.quickOpen"
    },
    {
        // privious item in quick open
        "key": "ctrl+p",
        "command": "workbench.action.quickOpenNavigatePrevious",
        "when": "inQuickOpen"
    },
    {
        // next item in quick open
        "key": "ctrl+n",
        "command": "workbench.action.quickOpenNavigateNext",
        "when": "inQuickOpen"
    },
    {
        // cusor up in insert mode
        "key": "ctrl+p",
        "command": "cursorUp",
        "when": "editorTextFocus && neovim.mode == insert && !suggestWidgetVisible"
    },
    {
        // disable new file
        "key": "ctrl+n",
        "command": "-workbench.action.files.newUntitledFile"
    },
    {
        // new file in normal mode
        "key": "ctrl+n",
        "command": "workbench.action.files.newUntitledFile",
        "when": "editorFocus && neovim.mode == normal"
    },
    {
        // cusor down in insert mode
        "key": "ctrl+n",
        "command": "cursorDown",
        "when": "editorTextFocus && neovim.mode == insert && !suggestWidgetVisible"
    },
    {
        // jump to start of line
        "key": "ctrl+a",
        "command": "cursorHome",
        "when": "editorTextFocus && neovim.mode == insert"
    },
    {
        // jump to end of line
        "key": "ctrl+e",
        "command": "cursorEnd",
        "when": "editorTextFocus && neovim.mode == insert"
    },
    {
        // cursor right
        "key": "ctrl+f",
        "command": "cursorRight",
        "when": "editorTextFocus && neovim.mode == insert"
    },
    {
        // cusor left
        "key": "ctrl+b",
        "command": "cursorLeft",
        "when": "editorTextFocus && neovim.mode == insert"
    },
    {
        // delete left
        "key": "ctrl+h",
        "command": "deleteLeft",
        "when": "editorTextFocus && neovim.mode == insert"
    },
    {
        // delete right
        "key": "ctrl+d",
        "command": "deleteRight",
        "when": "editorTextFocus && neovim.mode == insert"
    },
    {
        // delete all right
        "key": "ctrl+k",
        "command": "deleteAllRight",
        "when": "editorTextFocus && neovim.mode == insert"
    },

    // close

    {
        // close editor
        "key": "ctrl+w",
        "command": "workbench.action.closeActiveEditor"
    },
    {
        // close side bar
        "key": "ctrl+w",
        "command": "workbench.action.closeSidebar",
        "when": "sideBarFocus"
    },
    {
        // close panel
        // see terminal.integrated.commandsToSkipShell in settings.json
        "key": "ctrl+w",
        "command": "workbench.action.closePanel",
        "when": "panelFocus"
    },

    // focus
    {
        // next tab
        "key": "ctrl+l",
        "command": "workbench.action.nextEditor",
        "when": "editorFocus && neovim.mode != insert"
    },
    {
        // editor: previous tab
        "key": "ctrl+h",
        "command": "workbench.action.previousEditor",
        "when": "editorFocus && neovim.mode != insert"
    },

    // file explorer
    {
        // focus from editor
        "key": "ctrl+e",
        "command": "workbench.explorer.fileView.focus",
        "when": "editorFocus && neovim.mode == normal"
    },
    {
        // toggle
        "key": "ctrl+e",
        "command": "workbench.action.toggleSidebarVisibility",
        "when": "filesExplorerFocus"
    },
    {
        // focus from panel
        // see terminal.integrated.commandsToSkipShell in settings.json
        "key": "ctrl+e",
        "command": "workbench.explorer.fileView.focus",
        "when": "panelFocus"
    },
    {
        // toggle from panel
        // see terminal.integrated.commandsToSkipShell in settings.json
        "key": "ctrl+e",
        "command": "workbench.action.toggleSidebarVisibility",
        "when": "panelFocus"
    },
    {
        // explorer: rename
        "key": "r",
        "command": "renameFile",
        "when": "explorerViewletVisible && filesExplorerFocus && !inputFocus"
    },
    {
        // explorer: copy
        "key": "c",
        "command": "filesExplorer.copy",
        "when": "explorerViewletVisible && filesExplorerFocus && !inputFocus"
    },
    {
        // explorer: paste
        "key": "p",
        "command": "filesExplorer.paste",
        "when": "explorerViewletVisible && filesExplorerFocus && !inputFocus"
    },
    {
        // explorer: new file
        "key": "f",
        "command": "explorer.newFile",
        "when": "explorerViewletVisible && filesExplorerFocus && !inputFocus"
    },
    {
        // explorer: delete file
        "key": "d",
        "command": "deleteFile",
        "when": "explorerViewletVisible && filesExplorerFocus && !inputFocus"
    },
    {
        // explorer: new folder
        "key": "a",
        "command": "explorer.newFolder",
        "when": "explorerViewletVisible && filesExplorerFocus && !inputFocus"
    },
    // {
    //     // open to side
    //     "key": "ctrl+Enter",
    //     "command": "explorer.openToSide",
    //     "when": "explorerViewletVisible && filesExplorerFocus && !inputFocus"
    // },

    // terminal

    {
        // terminal focus
        "key": "ctrl+j",
        "command": "terminal.focus",
        "when": "editorFocus && neovim.mode == normal"
    },
    {
        // editor focus
        "key": "ctrl+k",
        "command": "workbench.action.focusActiveEditorGroup",
        "when": "terminalFocus"
    },
    {
        // new terminal
        // see terminal.integrated.commandsToSkipShell
        "key": "ctrl+n",
        "command": "workbench.action.terminal.new",
        "when": "terminalFocus"
    },
    {
        // new terminal to side
        // see terminal.integrated.commandsToSkipShell
        "key": "ctrl+v",
        "command": "workbench.action.terminal.split",
        "when": "terminalFocus"
    },
    {
        // focus next
        "key": "ctrl+l",
        "command": "workbench.action.terminal.focusNext",
        "when": "terminalFocus"
    },
    {
        // focus previous
        "key": "ctrl+h",
        "command": "workbench.action.terminal.focusPrevious",
        "when": "terminalFocus"
    },
    {
        // terminal: kill
        "key": "ctrl+shift+w",
        "command": "workbench.action.terminal.kill",
        "when": "terminalFocus"
    },
    {
        // toggle maximize panel
        "key": "ctrl+m",
        "command": "workbench.action.toggleMaximizedPanel",
        "when": "panelFocus"
    },

    // quick open
    {
        // disable quick open
        "key": "ctrl+e",
        "command": "-workbench.action.quickOpen"
    },
    {
        // open to side
        "key": "ctrl+Enter",
        "command": "search.action.openResultToSide",
        "when": "inQuickOpen"
    }
]
